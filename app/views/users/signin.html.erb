<main class="main">
	<div class="container mx-auto">
		<section class="wrapper">
    <%= form_for(User.new,  as: :user, html: {class: "lg:w-1/3 md:w-1/2 bg-white m-auto p-8 mt-12 flex flex-col gap-4 items-center"}, url: '/users/login', method: :post) do |f| %>
      <div class="heading flex flex-col items-center">
        <h2 class="text-3xl">Log in</h2>
        <p class="text text-normal">New user? <span><%= link_to "Create an account", "/users/new", class: "text text-links" %></span></p>
      </div>

      <div class="input-control w-full">
        <%= f.label :user_name, class: "hidden" %><br />
        <%= f.text_field :user_name, autofocus: true, autocomplete: "username", class: "border outline-none autofill:bg-[#fff] input-field w-full rounded-lg p-3", placeholder: "Your username..." %>
      </div>

      <div class="input-control w-full">
        <%= f.label :password, class: "hidden" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "border outline-none autofill:bg-[#fff] input-field w-full rounded-lg p-3", placeholder: "Your Password..." %>
      </div>

      <div class="input-control">
        <%= f.submit "Log in", class: "input-submit py-2 px-8 bg-blue-500 text-white rounded-md hover:bg-blue-900 cursor-pointer" %>
      </div>

      <div class="flex justify-between items-center mt-3">
        <hr class="w-full">
        <span class="p-2 text-gray-400 mb-1">OR</span>
        <hr class="w-full">
      </div>
      <button class="uppercase h-12 mt-3 text-white w-full rounded bg-blue-800 hover:bg-blue-900"><i class="fa fa-facebook mr-2"></i>Facebook</button>
      <button class="uppercase h-12 mt-3 text-white w-full rounded bg-red-600 hover:bg-red-900"><i class="fa fa-google mr-2"></i>Google</button>
      <button class="uppercase h-12 mt-3 text-white w-full rounded bg-gray-800 hover:bg-gray-900"><i class="fa fa-github mr-2"></i>Github</button>

    <% end %>
		</section>
	</div>
</main>